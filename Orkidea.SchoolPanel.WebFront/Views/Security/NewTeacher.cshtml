@model Orkidea.SchoolPanel.Entities.Teacher

@{
    ViewBag.Title = "Create";
}
<!-- validation -->
@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")


<h2>Maestro de profesores</h2>

@using (Html.BeginForm("NewTeacher", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nuevo profesor</legend>

        
        <div class="editor-field">
            <label>Primer nombre<span class="f_req">*</span></label>
            @Html.HiddenFor(model => model.idColegio)
            @Html.TextBoxFor(model => model.primerNombre, new { @class="required"})            
        </div>

        <div class="editor-label">Segundo nombre</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.segundoNombre)
        </div>
        
        <div class="editor-field">
            <label>Primer apellido<span class="f_req">*</span></label>
            @Html.TextBoxFor(model => model.primerApellido, new { @class="required"})            
        </div>

        <div class="editor-label">Segundo apellido</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.segundoApellido)
        </div>
        
        <div class="editor-field">
            <label>Documento<span class="f_req">*</span></label>
            @Html.TextBoxFor(model => model.cedula, new { @class="required"})            
        </div>

        <p>
            <input type="submit" value="Guardar" class="btn btn-info" />|
            @Html.ActionLink("Volver a la lista", "TeacherNoUserIndex", new { id = Model.idColegio })
        </p>
    </fieldset>
}


