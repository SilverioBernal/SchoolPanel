@model Orkidea.SchoolPanel.Entities.Place

@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")
<h2>Maestro de sedes</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)

    
    <fieldset>
        <legend>Crear sede</legend>
        <div class="row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.descripcion, "Nombre sede")
                @Html.TextBoxFor(model => model.descripcion, new { @class = "span12 required" })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.direccion, "Dirección")
                @Html.TextBoxFor(model => model.direccion, new { @class = "span12 required" })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                @Html.LabelFor(model => model.telefono, "Teléfono")
                @Html.TextBoxFor(model => model.telefono, new { @class = "span12 required" })
            </div>
        </div>
        <p>
            <input type="submit" value="Guardar" class="btn btn-primary" />|
        @Html.ActionLink("Volver a la lista", "Index")
        </p>
    </fieldset>    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
