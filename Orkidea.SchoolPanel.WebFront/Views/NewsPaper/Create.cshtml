@model Orkidea.SchoolPanel.Entities.NewsPaper

@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")
<h2>Maestro noticias</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)

    
    <fieldset>
        <legend>Crear noticia</legend>
        <div class="row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.titulo, "Título")
                @Html.TextBoxFor(model => model.titulo, new { @class = "span12 required" })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(model => model.noticia, "Contenido")
                @Html.TextAreaFor(model => model.noticia, new { @class = "span12 required", rows=4 })                
            </div>
        </div>
   <p>
            <input type="submit" value="Guardar" class="btn btn-primary" />|
        @Html.ActionLink("Volver a la lista", "Index")
        </p>
    </fieldset>
    <script>
        $(document).ready(function () {
            $('#posicionBoletin').val('');
        })
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
