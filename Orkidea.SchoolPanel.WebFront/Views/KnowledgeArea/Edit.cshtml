@model Orkidea.SchoolPanel.Entities.KnowledgeArea

@{
    ViewBag.Title = "Edit";
}
@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")
<h2>Maestro de áreas de conocimiento</h2>

@using (Html.BeginForm("Edit", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)

    
    <fieldset>
        <legend>Editar área de conocimiento</legend>
        <div class="row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.descripcion, "Descripción")
                @Html.TextBoxFor(model => model.descripcion, new { @class = "span12 required" })
                @Html.HiddenFor(model => model.idColegio)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span1">
                @Html.LabelFor(model => model.posicionBoletin, "Posición en el boletín")
                @Html.TextBoxFor(model => model.posicionBoletin, new { @class = "span12 required" })                
            </div>
        </div>
   <p>
            <input type="submit" value="Guardar" class="btn btn-primary" />|
        @Html.ActionLink("Volver a la lista", "Index")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
