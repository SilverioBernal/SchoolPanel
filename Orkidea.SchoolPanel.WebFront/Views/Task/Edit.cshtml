@model Orkidea.SchoolPanel.WebFront.Models.vmTask

@{
    ViewBag.Title = "Edit";
}

<!-- validation -->
@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")

<h2>Tareas</h2>

@using (Html.BeginForm("Edit", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.fechaCreacion)
    @Html.HiddenFor(model => model.idAsignatura)
    
    <fieldset>
        <legend>Nueva tarea</legend>

        <div class="row-fluid">
            <div class="span3">
                <label>Resumen<span class="f_req">*</span></label>
                @Html.TextBoxFor(model => model.titulo, new { @class = "required span12" })
            </div>
            <div class="span3">
                <label>Fecha límite de entrega<span class="f_req">*</span></label>
                @Html.TextBoxFor(model => model.fechaLimite, new { @class = "required span12", type = "text" })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <label>Contenido d ela tarea<span class="f_req">*</span></label>
                @Html.TextAreaFor(model => model.descripcion, new { @class = "required span12", required = true, rows = 4 })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <label>Activo<span class="f_req">*</span></label>
                @Html.CheckBoxFor(model => model.activo)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3">
                <p>
                    <input type="submit" value="Guardar" class="btn btn-info" id="btnSubmit" />|
                    @Html.ActionLink("Volver a la lista", "Index", new { id = ViewBag.id})
                </p>
            </div>
        </div>
    </fieldset>
    
    <script>
        $(document).ready(function () {
            $("#fechaLimite").val("@Model.fechaLimite.ToString("yyyy-MM-dd")");
        });

        //$('#btnSubmit').click(function () {
        //    var descripcion = $('#descripcion').val();

        //    if (descripcion == "")
        //        return false;
        //    else
        //        return true;
        //});

    </script>
}
