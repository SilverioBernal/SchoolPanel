@model Orkidea.SchoolPanel.Entities.ValuationLevel

@{
    ViewBag.Title = "Edit";
}

@Scripts.Render("~/Scripts/jquery.min.js")
@Scripts.Render("~/lib/validation/jquery.validate.min.js")
@Scripts.Render("~/js/gebo_validation.js")
<h2>Maestro de níveles de evaluación</h2>

@using (Html.BeginForm("Edit", null, FormMethod.Post, new { @class = "form_validation_ttip" }))
{
    @Html.ValidationSummary(true)

    
    <fieldset>
        <legend>Editar nível de evaluación</legend>
        <div class="row-fluid">
            <div class="span3">
                @Html.LabelFor(model => model.descripcion, "Descripción")
                @Html.TextBoxFor(model => model.descripcion, new { @class = "span12 required" })
                @Html.HiddenFor(model => model.idColegio)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span1">
                @Html.LabelFor(model => model.minimo, "Desde")
                @Html.TextBoxFor(model => model.minimo, new { @class = "span12 required" })                
            </div>
            <div class="span1">
                @Html.LabelFor(model => model.maximo, "Hasta")
                @Html.TextBoxFor(model => model.maximo, new { @class = "span12 required" })                
            </div>
            <div class="span1">
                @Html.LabelFor(model => model.noSupera, "No supera")
                @Html.CheckBoxFor(model => model.noSupera)                
            </div>
        </div>
   <p>
            <input type="submit" value="Guardar" class="btn btn-primary" /> |
        @Html.ActionLink("Volver a la lista", "Index")
        </p>
    </fieldset>
    <script>
        $(document).ready(function () {
            $('#posicionBoletin').val('');
        })
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
